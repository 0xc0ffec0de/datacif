extends layout

block content
  form#form(name="capitulo", method="post", address="")
    input#id(name="id", type="hidden", value="#{id}")
    input#data(name="data", type="hidden", value='#{data}')

    div#accordion

    div#chapter

    script.
      $(function() {
        var chapter = "#{chapter}";
        var titles = !{titles};
        var page = !{page};
        var data = !{data}; // JSON.parse($("input#data").val());

        createChapterPage($("div#accordion"), chapter, titles, page, data);
        $(document).tooltip();
      });
