  form.panel(name='funcao', method='POST', action='#{address}')
    input#id(type='hidden', name='id', value='#{id}')

    div#man.left-container
      h1.topic Fatores ambientais
      img(src='/images/world_small.png')

      input#e1(type='submit', name='chapters',
        onclick='return send(this);', value='', title='Produtos e tecnologias')

      input#e2(type='submit', name='chapters',
        onclick='return send(this);', value='',
        title='Ambiente natural e mudanças ambientais feitas pelo ser humano')

      input#e3(type='submit', name='chapters',
        onclick='return send(this);', value='', title='Apoio e relacionamentos')

      input#e4(type='submit', name='chapters',
        onclick='return send(this);', value='', title='Atitudes')

      input#e5(type='submit', name='chapters',
        onclick='return send(this);', value='', title='Serviços, sistemas e serviços')

    script.
      $(function() {
        $( document ).tooltip();
      });
