extends form-layout

block content
  h1= title

  form#formLogin(name="credentials", method="post", action="#{address}")
    if (locals.message && locals.message.length > 0)
      div= message
    p Login
      if (locals.login)
        input(type="text", placeholder="Login de acesso", name="login", value="#{login}")
      else
        input(type="text", placeholder="Login de acesso", name="login", value="")
    p Senha
      input(type="password", placeholder="Senha", name="senha", value="")

    span
      button#btnSubmit(type="submit") Login
